syntax on

set cursorcolumn
set cursorline

set expandtab                 
set smarttab
set shiftround
    
set autoindent smartindent shiftround
set shiftwidth=4
set tabstop=4
set softtabstop=4 

set ruler                       
set number                      
set nowrap
set showcmd                     
set showmode                
set showmatch                   
set matchtime=2 

set hlsearch
set incsearch               
set ignorecase              
set smartcase

set background=dark
colorscheme desert
